<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Quiz.LoginForm"
             Title="LoginForm">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Image Source="bluc.png" HeightRequest="150" WidthRequest="150" />

            <VerticalStackLayout>
                <Label Text="The C-Sharp Quiz"
                       FontSize="28"
                       TextColor="DarkGray"
                       HorizontalOptions="Center" />
                <Label Text="Login to your Account"
                       FontSize="18"
                       TextColor="Black"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

        
            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="58" WidthRequest="58" CornerRadius="30" BackgroundColor="White">
                    <Image Source="human.png" HeightRequest="20" WidthRequest="20" />
                </Frame>
                <Frame HeightRequest="50" Margin="-20,0,0,0" Padding="0" HasShadow="True"
                       BorderColor="White" HorizontalOptions="FillAndExpand" CornerRadius="15">
                    <Entry x:Name="EmailEntry"
                           Margin="20,0,0,0"
                           VerticalOptions="Center"
                           Placeholder="Enter Your Email"
                           TextColor="Black"
                           Keyboard="Email"
                           BackgroundColor="White" />
                </Frame>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="58" WidthRequest="58" CornerRadius="30" BackgroundColor="White">
                    <Image Source="lock.png" HeightRequest="20" WidthRequest="20" />
                </Frame>
                <Frame HeightRequest="50" Margin="-20,0,0,0" Padding="0" HasShadow="True"
                       BorderColor="Snow" HorizontalOptions="FillAndExpand" CornerRadius="15">
                    <Entry x:Name="PasswordEntry"
                           Margin="20,0,0,0"
                           VerticalOptions="Center"
                           Placeholder="Password"
                           IsPassword="True"
                           TextColor="Black"
                           BackgroundColor="White" />
                </Frame>
            </StackLayout>

            <Button Text="Sign in"
                    WidthRequest="200"
                    CornerRadius="30"
                    HorizontalOptions="Center"
                    BackgroundColor="#0792ef"
                    Clicked="OnSignInClicked" />

          
            <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                <Label Text="Don't Have an Account?" TextColor="Black" />
                <Label Text="Sign Up Here" TextColor="#0792ef">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
