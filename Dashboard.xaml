<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Quiz.ChatPage"
             Title="Chat"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto"
          Padding="10">

        <CollectionView x:Name="MessagesCollectionView"
                        ItemsSource="{Binding Messages}"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="Transparent"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5"
                                 HorizontalOptions="{Binding IsSentByMe, Converter={StaticResource BoolToLayoutConverter}}">
                        <Frame BackgroundColor="{Binding IsSentByMe, Converter={StaticResource BoolToColorConverter}}"
                               CornerRadius="12"
                               HasShadow="False"
                               Padding="10"
                               Margin="5"
                               HorizontalOptions="{Binding IsSentByMe, Converter={StaticResource BoolToLayoutConverter}}">
                            <Label Text="{Binding Text}"
                                   TextColor="White"
                                   FontSize="16"/>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     Spacing="10"
                     Padding="5">
            <Entry x:Name="MessageEntry"
                   Placeholder="Type a message..."
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="#F0F0F0"
                   HeightRequest="45"
                   CornerRadius="20"
                   Padding="10"/>
            <Button Text="Send"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="45"
                    Clicked="OnSendClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
