<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="The_Quiz.Quiz"
             Title="C# Quiz">

    <ScrollView>
        <VerticalStackLayout x:Name="QuizLayout" Padding="20" Spacing="20">

            <Label Text="Welcome to the C# Quiz!"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Button Text="Submit Answers"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnSubmitClicked"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>

            <Label x:Name="ResultLabel"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
